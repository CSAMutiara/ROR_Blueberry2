.activity-cards
    - @rfactivities.each do |rfactivity|
        .card.text-center
            .card-header
            .card-body
                %ul.list-group
                    %li.list-group-item.disabled Year# Report
                    %li.list-group-item.list-group-item-info
                        %h2.card-title #{rfactivity.name}
                        %h4.card-text by faculty
                    %li.list-group-item.disabled
                        Details:
                        %br/
                        %br/
                        %ul.list-group.list-group-flush
                            %li.list-group-item #{rfactivity.ta1}
                            %li.list-group-item #{rfactivity.ta2}
                    %li.list-group-item.text-muted
                        Submitted: #{rfactivity.date.strftime("%b %e, %Y (%T %p)")}
                        %a.btn.btn-light{:href => "#"} Edit
        %br/
        %br/
