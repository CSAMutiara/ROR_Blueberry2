.form-container
    .row
        .col-md-1
        .col-md-10
            %ul.list-group
                = simple_form_for(@report) do |f|
                    %li.list-group-item.list-group-item-info
                        .row
                            .col-md-1
                            .col-md-10
                                %h3= f.input :year, label: "Year of Report:", input_html: { class: "form-control" }
                        %br/
                        .row
                            .col-md-8
                            .col-md-1
                                = link_to "Cancel", root_path
                            .col-md-2
                                = f.button :submit
                        %br/