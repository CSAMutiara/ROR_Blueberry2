#activities
    %ul.list-group
        %li.list-group-item.list-group-item-info.text-center
            %h2 Summary of #{@report.year}
            %br/
        %li.list-group-item
            %br/
            #tactivities
                - if Tactivity.where(report_id: @report).first
                    .row
                        .col-md-2
                        .col-md-8
                            %ul.list-group
                                - @report.tactivities.each do |tactivity|
                                    %li.list-group-item.disabled
                                        %h4.card-title #{link_to "Teaching Activities", report_tactivities_path(@report)}
                                        %h5.card-title #{tactivity.date.strftime("%b %e, %Y (%T %p)")}
                        .col-md-1
                - else
                    .row
                        .col-md-2
                        .col-md-8
                            %ul.list-group
