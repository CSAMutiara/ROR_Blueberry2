                                        %h5.card-title #{sactivity.date.strftime("%b %e, %Y (%T %p)")}
                        .col-md-1
                - else
                    .row
                        .col-md-12
                            %ul.list-group
                                %li.list-group-item.list-group-item-info.text-center
                                    %h2 #{link_to "Create a Services Summary for #{@report.year}", report_sactivities_path(@report)} 
                                %li.list-group-item
                                    %br/
                                    .row
                                        .col-md-1
                                        .col-md-10
                                            %ul.list-group
                                                %li.list-group-item.disabled
                                                    = render 'sactivities/sform'
            %br/
            #rsactivities
                - if Rsactivity.where(report_id: @report).first
                    .row
                        .col-md-2
                        .col-md-8
