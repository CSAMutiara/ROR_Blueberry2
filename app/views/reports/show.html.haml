%br/
%br/
%br/
.jumbotron.jumbotron-fluid
    #report
        %h1.display-4= link_to "#{@report.year} Activities", report_path(@report)
        %p.lead Hello Faculty! Below, you can view, update or delete your activities from the year #{@report.year} in descending order
    .row.text-center
        .col-md-10
        .col-md-1
            %h4= link_to "Edit", edit_report_url
        .col-md-1
            %h4= link_to "Delete", report_path(@report), method: :delete, data: {confirm: "Are you sure?"}
%br/
%br/
%br/
#activities
    %ul.list-group
        %li.list-group-item.list-group-item-info.text-center
            .row.text-center 
                %nav{"aria-label" => "Page navigation"}
                    %ul.pagination
                        %li
                            %a{:href => "#"} Summary
                        %li= link_to "Teaching", report_tactivities_path(@report)
                        %li= link_to "Services", report_sactivities_path(@report)
                        %li= link_to "Research & Professional", report_rsactivities_path(@report)
                        %li= link_to "Institutional Support", report_iactivities_path(@report)
                        %li= link_to "References", report_rfactivities_path(@report)
                        %li
                            %a{"aria-label" => "Next", :href => "#"}
                                %span{"aria-hidden" => "true"} Â»
            %h2 Summary of #{@report.year}
            %br/
        %li.list-group-item
            %br/
            #tactivities
                - if Tactivity.where(report_id: @report).first
                    .row
                        .col-md-2
                        .col-md-8
                            %ul.list-group
                                - @report.tactivities.each do |tactivity|
                                    %li.list-group-item.disabled
                                        %h4.card-title #{link_to tactivity.name, report_tactivity_path(@report, tactivity)}
                                        %h5.card-title #{tactivity.date.strftime("%b %e, %Y (%T %p)")}
                        .col-md-1
                - else
                    .row
                        .col-md-12
                            %ul.list-group
                                %li.list-group-item.list-group-item-info.text-center
                                    %h2 #{link_to "Create a Teaching Summary for #{@report.year}", report_tactivities_path(@report)} 
                                %li.list-group-item
                                    .row
                                        .col-md-1
                                        .col-md-10
                                            %ul.list-group
                                                %li.list-group-item.disabled
                                                    = render 'tactivities/tform'
            %br/
            #sactivities
                - if Sactivity.where(report_id: @report).first
                    .row
                        .col-md-2
                        .col-md-8
                            %ul.list-group
                                - @report.sactivities.each do |sactivity|
                                    %li.list-group-item.disabled
