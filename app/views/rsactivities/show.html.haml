.row.text-center
    .col-md-10
    .col-md-1
        %h4= link_to "Edit", edit_report_url(@rsactivity.report)
    .col-md-1
        %h4= link_to "Delete", report_path(@rsactivity.report), method: :delete, data: {confirm: "Are you sure?"}
.jumbotron.jumbotron-fluid
    #report
        %h1.display-5= link_to "#{@rsactivity.report.year} Activities", report_path(@rsactivity.report)
        %p.lead Hello Faculty! Below, you can view, update or delete your activities from the year #{@rsactivity.report.year}.
    .row.text-center 
        %nav{"aria-label" => "Page navigation"}
            %ul.pagination
                %li= link_to "Summary", report_path(@rsactivity.report)
                %li= link_to "Teaching", report_tactivities_path(@rsactivity.report)
                %li= link_to "Services", report_sactivities_path(@rsactivity.report)
                %li.disabled= link_to "Research & Professional", report_rsactivities_path(@rsactivity.report)
                %li= link_to "Institutional Support", report_iactivities_path(@rsactivity.report)
                %li= link_to "References", report_rfactivities_path(@rsactivity.report)
%br/
%br/
%br/

#activities
    %ul.list-group
        %li.list-group-item.list-group-item-info.text-center
            %h1 Research & Professional Activities Summary for #{@rsactivity.report.year} 
            %h1 has been updated with:
            %br/
            %li.list-group-item
                %br/
                %br/
                #rsactivities
                    .row
                        .col-md-1
                        .col-md-10
                            .card.text-center
                                .card-body
                                    %ul.list-group.text-center
                                        - if @rsactivity.date.strftime("%Y").to_i == @rsactivity.report.year
                                            %li.list-group-item.disabled
                                                .row
                                                    .col-md-10
                                                    .col-md-1
                                                        %h5= link_to "Edit", edit_report_rsactivity_path(@rsactivity.report, @rsactivity)
                                                    .col-md-1 
                                                        %h5= link_to "Delete", report_rsactivity_path(@rsactivity.report, @rsactivity), method: :delete, data: {confirm: "Are you sure?"}
                                            %li.list-group-item.list-group-item-info
                                                %h2.card-title #{@rsactivity.name}
                                                %p.text-muted Submitted on #{@rsactivity.date.strftime("%b %e, %Y (%T %p)")} by Faculty
                                            %li.list-group-item.disabled
                                                Details:
                                                %br/
                                                %br/
                                                %ul.list-group.list-group-flush
                                                    %li.list-group-item #{@rsactivity.ta1}
                                                    %li.list-group-item #{@rsactivity.ta2}
                                                    %li.list-group-item #{@rsactivity.ta3}
                                                    %li.list-group-item #{@rsactivity.ta4}
                                            %br/
                        .col-md-1
            %li.list-group-item.list-group-item-info.text-center
                .row.text-center
                    .col-md-2
                        .row.text-center 
                            %nav{"aria-label" => "Page navigation"}
                                %ul.pagination
                                    %li= link_to "« Back to Services", report_sactivities_path(@rsactivity.report)
                    .col-md-7
                    .col-md-3
                        .row.text-center 
                            %nav{"aria-label" => "Page navigation"}
                                %ul.pagination
                                    %li= link_to "Move to Institutional Support »", report_iactivities_path(@rsactivity.report)
            %br/
            %br/
            %br/
            %br/